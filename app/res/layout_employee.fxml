<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.wijayaprinting.ui.employee.EmployeeController">
    <ToolBar>
        <!--suppress JavaFxEventHandler -->
        <Button mnemonicParsing="false" onAction="#onRefresh">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@btn_refresh.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="%refresh"/>
            </tooltip>
        </Button>
        <Separator/>
        <Button mnemonicParsing="false" onAction="#onFullAccess" fx:id="fullAccessButton" text="%full_access"/>
        <Button mnemonicParsing="false" onAction="#onResetPassword" fx:id="resetPasswordButton"
                text="%reset_password"/>
        <Separator/>
        <Button mnemonicParsing="false" onAction="#onAdd">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@btn_user_add.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="%add"/>
            </tooltip>
        </Button>
    </ToolBar>
    <TableView fx:id="employeeTable" editable="true" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="%name" editable="false"/>
            <TableColumn fx:id="fullAccessColumn" text="%full_access"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>