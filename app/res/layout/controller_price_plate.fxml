<?xml version="1.0" encoding="utf-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hendraanggrian.openpss.ui.invoice.price.PlatePriceController">
    <ToolBar>
        <!--suppress JavaFxEventHandler -->
        <Button mnemonicParsing="false" onAction="#refresh">
            <tooltip>
                <Tooltip text="%refresh"/>
            </tooltip>
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_refresh_light.png"/>
                </ImageView>
            </graphic>
        </Button>
        <!--suppress JavaFxEventHandler -->
        <Button mnemonicParsing="false" onAction="#add">
            <tooltip>
                <Tooltip text="%add"/>
            </tooltip>
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_add_light.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" fx:id="deleteButton" onAction="#delete">
            <tooltip>
                <Tooltip text="%delete"/>
            </tooltip>
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_delete_light.png"/>
                </ImageView>
            </graphic>
        </Button>
    </ToolBar>
    <TableView fx:id="table" VBox.vgrow="ALWAYS" editable="true">
        <columns>
            <TableColumn fx:id="nameColumn" text="%name" prefWidth="192" editable="false"/>
            <TableColumn fx:id="priceColumn" text="%price" prefWidth="128"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>