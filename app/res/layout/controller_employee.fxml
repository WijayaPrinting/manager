<?xml version="1.0" encoding="utf-8"?>

<?import com.hendraanggrian.openpss.controls.Space?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hendraanggrian.openpss.ui.employee.EmployeeController">
    <ToolBar stylesheets="@../style/toolbar_buttons.css">
        <!--suppress JavaFxEventHandler -->
        <Button mnemonicParsing="false" onAction="#refresh" text="%refresh">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/toolbar_refresh.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Space/>
        <Button mnemonicParsing="false" onAction="#addEmployee" text="%add_employee">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/toolbar_add_customer.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Space/>
        <Button mnemonicParsing="false" fx:id="fullAccessButton" onAction="#fullAccess"
                text="%full_access">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/toolbar_full_access.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" fx:id="resetPasswordButton" onAction="#resetPassword"
                text="%reset_password">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/toolbar_reset_password.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" fx:id="deleteButton" onAction="#delete" text="%delete">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/toolbar_delete.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Space HBox.hgrow="ALWAYS"/>
    </ToolBar>
    <TableView fx:id="employeeTable" editable="true" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" editable="false" text="%name"/>
            <TableColumn fx:id="fullAccessColumn" text="%full_access"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>