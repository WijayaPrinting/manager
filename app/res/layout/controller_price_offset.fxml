<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hendraanggrian.openpss.ui.order.OffsetPriceController">
    <ToolBar>
        <!--suppress JavaFxEventHandler -->
        <Button mnemonicParsing="false" onAction="#refresh" text="%refresh">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_refresh.png"/>
                </ImageView>
            </graphic>
        </Button>
        <!--suppress JavaFxEventHandler -->
        <Button mnemonicParsing="false" onAction="#add" text="%add">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_add.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" fx:id="deleteButton" onAction="#delete" text="%delete">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_delete.png"/>
                </ImageView>
            </graphic>
        </Button>
    </ToolBar>
    <TableView fx:id="table" VBox.vgrow="ALWAYS" editable="true">
        <columns>
            <TableColumn fx:id="nameColumn" text="%name" prefWidth="192" editable="false"/>
            <TableColumn fx:id="minAmountColumn" text="%min_amount" prefWidth="128"/>
            <TableColumn fx:id="minPriceColumn" text="%min_price" prefWidth="128"/>
            <TableColumn fx:id="excessPriceColumn" text="%excess_price" prefWidth="128"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>