<?xml version="1.0" encoding="UTF-8"?>

<?import com.wijayaprinting.ui.scene.control.FileField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.wijayaprinting.ui.wage.WageController">
    <ToolBar>
        <Button mnemonicParsing="false" onAction="#recess">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_recess.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="%recess"/>
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#history">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_history.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="%history"/>
            </tooltip>
        </Button>
        <Separator/>
        <ChoiceBox fx:id="readerChoiceBox"/>
        <FileField fx:id="fileField" prefWidth="448.0" promptText="%input_file"/>
        <Button mnemonicParsing="false" onAction="#browse">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_folder.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="%browse_file"/>
            </tooltip>
        </Button>
        <ToggleButton fx:id="mergeToggleButton" mnemonicParsing="false" selected="true">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@/image/btn_merge.png"/>
                </ImageView>
            </graphic>
            <tooltip>
                <Tooltip text="%merge_close_records"/>
            </tooltip>
        </ToggleButton>
    </ToolBar>
    <ScrollPane fx:id="scrollPane" VBox.vgrow="ALWAYS" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
        <FlowPane fx:id="flowPane"/>
    </ScrollPane>
    <HBox alignment="CENTER">
        <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </padding>
        <Label fx:id="employeeCountLabel" text="Label"/>
        <ButtonBar HBox.hgrow="ALWAYS">
            <buttons>
                <Button fx:id="readButton" mnemonicParsing="false" onAction="#read" text="%read"/>
                <Button fx:id="processButton" defaultButton="true" mnemonicParsing="false" onAction="#process"
                        text="%process"/>
            </buttons>
        </ButtonBar>
    </HBox>
</VBox>
