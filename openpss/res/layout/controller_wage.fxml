<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hendraanggrian.openpss.ui.wage.WageController">
    <!-- AnchorPane is necessary for displaying loadingPane in the center. -->
    <JFXToolbar>
        <leftItems>
            <Label fx:id="titleLabel"/>
        </leftItems>
        <rightItems>
            <JFXButton fx:id="processButton" mnemonicParsing="false" styleClass="button-raised" text="%process"
                       onAction="#process"/>
        </rightItems>
    </JFXToolbar>
    <AnchorPane fx:id="anchorPane" VBox.vgrow="ALWAYS">
        <ScrollPane AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0">
            <FlowPane fx:id="flowPane"/>
        </ScrollPane>
    </AnchorPane>
</VBox>